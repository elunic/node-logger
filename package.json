{
  "name": "@elunic/logger",
  "version": "2.1.0",
  "description": "A simple wrapper around winston which logs to console as well as multiple files, with child namespaces.",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "files": [
    "dist/src/"
  ],
  "license": "MIT",
  "scripts": {
    "test": "npm run clean && npm run compile && npx jasmine 'dist/test/**/*.spec.js' && npm run check",
    "test:watch": "npm run clean && npx tsc-watch --onSuccess \"npx jasmine 'dist/test/**/*.spec.js'\" --preserveWatchOutput -w --noEmitOnError false",
    "compile": "npm run clean && tsc -p .",
    "compile:prod": "npm run clean && tsc -p tsconfig.prod.json",
    "clean": "shx rm -rf dist/",
    "check": "tslint -c tslint.fix.json '{src,test}/**/*.{ts,js}' && prettier --config ./prettier.config.js --check '{src,test}/**/*.{ts,js}'",
    "fix": "tslint -c tslint.fix.json --fix '{src,test}/**/*.{ts,js}' && prettier --config ./prettier.config.js --write '{src,test}/**/*.{ts,js}'",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint -c tslint.fix.json -p . --fix",
      "prettier --config ./prettier.config.js --write",
      "git add"
    ],
    "test/**/*.ts": [
      "tslint -c tslint.fix.json -p . --fix",
      "prettier --config ./prettier.config.js --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elunic/node-logger.git"
  },
  "keywords": [
    "logger",
    "logging",
    "log",
    "logs",
    "elunic"
  ],
  "author": {
    "name": "William Hefter",
    "email": "wh@elunic.com"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jasmine": "^3.3.7",
    "@types/node": "^10.12.19",
    "@types/sinon": "^7.0.5",
    "@types/triple-beam": "^1.3.0",
    "husky": "^1.3.1",
    "jasmine": "^3.3.1",
    "lint-staged": "^8.1.0",
    "shx": "^0.3.2",
    "sinon": "^7.2.3",
    "tsc-watch": "^1.1.34",
    "tslint": "^5.15.0",
    "typescript": "~3.1.0"
  },
  "dependencies": {
    "@elunic/ecs": "^0.1.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
