{
  "name": "@elunic/logger",
  "version": "3.0.2",
  "description": "A simple wrapper around winston which logs to console as well as multiple files, with child namespaces.",
  "main": "index.js",
  "typings": "index.d.ts",
  "types": "index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "npm run test:watch",
    "test:watch": "npm run clean && npx tsc-watch --onSuccess \"npx jasmine --config=.jasmine.json\" --preserveWatchOutput -w --noEmitOnError false",
    "test:once": "npm run clean && npm run compile && npx jasmine --config=.jasmine.json && npm run check",
    "test:ci": "npm run test:once",
    "compile": "tsc -p .",
    "compile:prod": "tsc -p tsconfig.prod.json",
    "clean": "rm -rf dist/",
    "check": "tslint -p . -c tslint.fix.json && prettier --check '{src,test}/**/*.{ts,js}'",
    "fix": "tslint --fix -p . -c tslint.fix.json && prettier --write '{src,test}/**/*.{ts,js}'",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elunic/node-logger.git"
  },
  "keywords": [
    "logger",
    "logging",
    "log",
    "logs",
    "elunic"
  ],
  "author": {
    "name": "William Hefter",
    "email": "wh@elunic.com"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@elunic/ecs": "^0.1.4",
    "@nestjs/common": "^6.11.5",
    "@nestjs/core": "^6.11.5",
    "@nestjs/platform-express": "^6.11.5",
    "@nestjs/testing": "^6.11.5",
    "@types/jasmine": "^3.3.7",
    "@types/node": "^10.12.19",
    "@types/sinon": "^7.0.5",
    "@types/triple-beam": "^1.3.0",
    "husky": "^1.3.1",
    "jasmine": "^3.3.1",
    "jasmine-spec-reporter": "^4.2.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.18.2",
    "reflect-metadata": "^0.1.13",
    "sinon": "^7.2.3",
    "source-map-support": "^0.5.12",
    "tsc-watch": "^1.1.34",
    "tslint": "^5.18.0",
    "typescript": "^3.5.0"
  },
  "dependencies": {
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.6.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^5.0.0 || ^6.5.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
